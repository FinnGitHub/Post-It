@model IEnumerable<PostIt.Models.Post>
@{
    ViewData["Title"] = "Posts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Posts</h1>
<br />
@foreach (var item in Model)
{
    <div class="container EventsBorder">
        <div class="row">
            <div class="col"><h4><a href='@string.Format("/Post/PostPage?eventID={0}", item.PostID)'>@item.PostName</a></h4><br /></div>
        </div>

        <div class="row">
            <div class="col"><h7>@item.Categories</h7><br /><br /></div>
        </div>

        <div class="row">
            <div class="col-3"><img class="rounded" style="max-width: 66%" src="~/Images/@item.ImageSrc" /></div>
            <div class="col-9"><h8>@item.Description</h8></div>
        </div>
    </div>
    <br />
}
